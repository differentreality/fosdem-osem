.row
  .col-md-12
    .page-header
      %h1
        Add shipment
        .text-muted
          = @sponsor.name
.row
  .col-md-8
    = semantic_form_for(@sponsor, url: admin_conference_sponsor_path(@conference, @sponsor)) do |f|
      = f.inputs 'Shipment info' do
        #shipment
          - if @sponsor.shipments.present?
            - @sponsor.shipments.each do |shipment|
              = render partial: 'shipment_fields', locals: { shipment: shipment}
          - else
            = render partial: 'shipment_fields', locals: { shipment: nil }
      = link_to 'add', add_shipment_fields_admin_conference_sponsor_path(@conference, @sponsor), remote: true
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
