.row
  .col-md-12
    .page-header
      %h1
        -if @sponsor.new_record?
          New
        Sponsor
        = @sponsor.name
.row
  .col-md-8
    = semantic_form_for(@sponsor, url: (@sponsor.new_record? ? admin_conference_sponsors_path : admin_conference_sponsor_path(@conference.short_title, @sponsor))) do |f|
      = f.input :name, input_html: { autofocus: true }
      = f.input :description, input_html: { rows: 3 }
      = image_tag f.object.picture.thumb.url if f.object.picture?
      = f.input :picture
      = f.input :website_url
      = f.input :sponsorship_level, collection: @conference.sponsorship_levels
      = f.inputs 'Swag info' do
        #swag
          - if @sponsor.swag.any?
            - @sponsor.swag.each do |swag|
              = render partial: 'swag_fields', locals: { swag: swag }
          - else
            = render partial: 'swag_fields', locals: { swag: nil }
      = link_to 'add', add_swag_fields_admin_conference_sponsor_path(@conference, @sponsor), remote: true
      %p.text-right
        = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
