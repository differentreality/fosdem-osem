.col-md-12
  .page-header
    %h1
      -if @sponsorship.new_record?
        New
      Sponsorship
.col-md-8
  = semantic_form_for(@sponsorship, url: (@sponsorship.new_record? ? conference_sponsorships_path : conference_sponsorship_path(@conference.short_title, @sponsorship))) do |f|

    = f.fields_for @sponsor do |sponsor|
      = sponsor.input :name, input_html: { autofocus: true }, label: 'Company Name', hint: "The sponsor's name"
      = sponsor.input :description, input_html: { rows: 5 }, hint: "A few words about the sponsor and the sponsor's relationship to open source"

    = f.input :amount, hint: 'The amount you wish to sponsor (optional)'

    %p.text-right
      = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
